def login(username,password):
    db = sql.connect(f)
    c = db.cursor()
    hashpass = hashlib.sha224(password).hexdigest()
    users = c.execute("SELECT pass FROM users WHERE user == %s" % (username))
    if users and users[2] == hashpass:
        return True
    else: 
        return False
    db.commit()
    db.close()

